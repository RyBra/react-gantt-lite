{
  "name": "react-gantt-lite",
  "version": "0.0.2",
  "private": false,
  "description": "React Gantt chart component",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "typecheck": "tsc --noEmit",
    "start": "vite",
    "preview": "vite preview",
    "build:site": "vite build --outDir site-dist",
    "deploy:pages": "gh-pages -d site-dist",
    "prepublishOnly": "npm run build && npm pack --dry-run"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.3.4",
    "gh-pages": "^6.1.1"
  },
  "license": "PolyForm-Noncommercial-1.0.0"
}
